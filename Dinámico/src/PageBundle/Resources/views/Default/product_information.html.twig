{% extends "layout.html.twig" %}

{% block title%} Farm Information {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/css/product_information.css') }}" />
{% endblock %}
{% block body %}
<main>
		<section>
			<center><h2>{{ template.getPageTitle() }}</h2></center>
			<div id='carouselHeading' class='col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6'>
				<center><h3>{{ product.getName() }}</h3></center>
			</div>
			<div id='prodInfoSection' class='col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6'>
				<div id='prodInfoCarouselContainer' class="container col-xs-12">
	                <div id="myCarousel" class="carousel slide" data-interval="false">
		                <div class="carousel-inner" role="listbox">
			                <div class="item active">
			                	<div class="row-fluid">
									<div class="carouselCards col-xs-12 col-md-offset-2 col-md-8">
										<div class="productThumbnails">
											<div class='prodThumbInside'>
												<img class='prodThumbImgs' src=" {{ product.getImage() }}">
												<div class='row'>
													<h4>{{ template.getFarmTitle() }}: 
														<a id='prodInfofarmInfo' href="{{ path('farm_information',{'farm_id':product.getFarm().getId()}) }}">{{ product.getFarm().getName() }}</a>
													</h4>
												</div>	
												<div class='row'>
													<div class='col-xs-12'>
														<p class='price'>{{ presentation.getPrice() }}</p>
												</div>
												</div>
												<div class='row'>
													<a class='prodInfoIconHeadOrder col-xs-offset-4 col-xs-4' href="#">
														<img src="/web/public/imgs/icon5.svg">
														<h4>{{ template.getOrderTitle() }}</h4>
													</a>
												</div>
												<div class='row'>
													<div class='col-xs-12 col-md-6'>
														<div class="rating">
															{% set rank= 0 %}
															{% for inx in 1..product.getRank() %}
															 	{% set rank = rank+1 %}
															 	<span>&#x2605;</span>
															{% endfor %}
															{% if rank < 5 %}
																{% for inx2 in rank..4 %}
																 	{% set rank = rank+1 %}
																 	<span>&#x2606;</span>
																{% endfor %}
															{% endif %}
														</div>
														</div>
														<div class='col-xs-12 col-md-6'>
															<a href="#">{{ product.getReviews() }} {{ template.getReviewsTitle() }}</a>
														</div>	
													</div>													
											</div>
										</div>
									</div>
			                	</div>
			                </div>
			                <div class="item">
			                	<div class="row-fluid">
									<div class="carouselCards col-xs-12 col-md-offset-2 col-md-8">
										<div class="productThumbnails">
											<div class='prodThumbInside'>
												<img class='prodThumbImgs' src="/web/public/imgs/coffeeBag2.png">
												<div class='row'>
													<h4>Farm: <a id='prodInfofarmInfo' href="">Tortuga</a></h4>
												</div>	
												<div class='row'>
													<div class='col-xs-12'>
														<p class='price'>$29.99</p>
													</div>
												</div>
												<div class='row'>
													<a class='prodInfoIconHeadOrder col-xs-offset-4 col-xs-4' href="#">
														<img src="/web/public/imgs/icon5.svg">
														<h4>Order</h4>
													</a>
												</div>
												<div class='row'>
													<div class='col-xs-12 col-md-6'>
														<div class="rating">
																<span>&#x2605;</span><span>&#x2605;</span><span>&#x2605;</span><span>&#x2606;</span><span>&#x2606;</span>
															</div>
														</div>
														<div class='col-xs-12 col-md-6'>
															<a href="#">12 reviews</a>
														</div>	
													</div>													
											</div>
										</div>
									</div>
			                	</div>
			                </div>
			                 
			                <div class="item">
			                	<div class="row-fluid">
									<div class="carouselCards col-xs-12 col-md-offset-2 col-md-8">
										<div class="productThumbnails">
											<div class='prodThumbInside'>
												<img class='prodThumbImgs' src="/web/public/imgs/coffeeBag3.png">
												<div class='row'>
													<h4>Farm: <a id='prodInfofarmInfo' href="">Tortuga</a></h4>
												</div>	
												<center>
													<p class='price'>$29.99</p>
												</center>
												<div class='row'>
													<a class='prodInfoIconHeadOrder col-xs-offset-4 col-xs-4' href="#">
														<img src="/web/public/imgs/icon5.svg">
														<h4>Order</h4>
													</a>
												</div>
												<div class='row'>
													<div class='col-xs-12 col-md-6'>
														<div class="rating">
																<span>&#x2605;</span><span>&#x2605;</span><span>&#x2605;</span><span>&#x2606;</span><span>&#x2606;</span>
															</div>
														</div>
														<div class='col-xs-12 col-md-6'>
															<a href="#">12 reviews</a>
														</div>	
													</div>													
											</div>
										</div>
									</div>
			                	</div>
			                </div>
		                </div>
		                <a class="left carousel-control" href="#myCarousel" data-slide="prev"></a>
		                <a class="right carousel-control" href="#myCarousel" data-slide="next"></a>
	                </div>
				</div>
			</div>
		</section>
		<div class='clearfix'></div>
		<section>
			<div class='prodInfoPreferences row col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6'>
				<div class='row'>
					<div class='col-xs-12 col-md-6'>
						<div id='informationSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon2.svg">
									<h4>{{ template.getInformationTitle() }}</h4>
								</div>
							</center>
							<div id='prodInfoDetails' class='col-xs-12'>
								<p>
									<span>{{ template.getSpeciesTitle() }}: </span></br>
									<span>{{ template.getCultivarTitle() }}: </span></br>
									<span>{{ template.getGradeTitle() }}: </span></br>
									<span>{{ template.getProcessingTitle() }}: </span></br>
									<span>{{ template.getFlavorNotesTitle() }}</span></br>
								</p>
							</div>
						</div>
					</div>
					<div class='col-xs-12 col-md-6'>
						<div id='roastSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon7.svg">
									<h4>{{ template.getRoastTitle() }}</h4>
								</div>
							</center>
							<div class="btn-group btn-group-justified" role="group" aria-label="...">
								{% for pPresentation in product.getPresentations%}							
									<div class="btn-group" role="group">
										<button type="button" class="btn btn-default">{{ pPresentation.getRoast().getDescription() }}</button>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
				<div class='row'>
					<div class='col-xs-12 col-md-6'>
						<div id='presentationSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon10.svg">
									<h4>{{ template.getWeightTitle() }}</h4>
								</div>
							</center>
							<div class="btn-group btn-group-justified" role="group" aria-label="...">
								{% for pPresentation in product.getPresentations%}							
									<div class="btn-group" role="group">
										<button type="button" class="btn btn-default">{{ pPresentation.getWeight() }}</button>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
					<div class='col-xs-12 col-md-6'>
						<div id='presentationSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon8.svg">
									<h4>{{ template.getWeightTitle() }}</h4>
								</div>
							</center>
							<div class="btn-group btn-group-justified" role="group" aria-label="...">
								{% for pPresentation in product.getPresentations%}							
									<div class="btn-group" role="group">
										<button type="button" class="btn btn-default">{{ pPresentation.getGrind().getDescription() }}</button>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
				<div class='row'>
					<div class='col-xs-12 col-md-offset-3 col-md-6'>
						<div id='cupSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon9.svg">
									<h4>{{ template.getCupScoringTitle() }}</h4>
								</div>
							</center>
							<div id='cupMap' class='col-xs-12'>
								<center><img src="/web/public/imgs/cupScoring.png"></center>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
{% endblock %}