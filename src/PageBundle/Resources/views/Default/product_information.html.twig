{% extends "layout.html.twig" %}

{% block title%} Product Information {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/web/public/css/product_information.css') }}" />
{% endblock %}
{% block body %}
<main>
<section>
		<div id='prodInfoWidth'>
			<center><h2>
					{{ template.getPageTitle() }}</h2></center>
		<section>
			<div id='prodInfoSection' class='col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6'>
				<div id='prodInfoCarouselContainer' class="container col-xs-12">
	                <div id="myCarousel" class="carousel slide both" data-interval="false">
		                <div class="carousel-inner" role="listbox">
		                	{% for prod in farm.getProducts %}
		                	<div
		                	{% if loop.first%}
			                	class= "item active"
			                {% else %}
			                	class= "item"
			                {% endif %}
			                >
								<div id='carouselHeading' >
									<center><h3>{{ product.getName() }}</h3></center>
								</div>
			                	<div class="row-fluid">
									<div class="carouselCards col-xs-12 col-md-offset-2 col-md-8">
										<div class="productThumbnails">
											<div class='prodThumbInside'>
												<img class='prodThumbImgs' src="{{ product.getImage() }} ">										
											</div>
										</div>
									</div>
			                	</div>
			                </div>
		                	{% endfor %}
		                </div>
		                <a class="left carousel-control" href=".both" data-slide="prev"></a>
		                <a class="right carousel-control" href=".both" data-slide="next"></a>
	                </div>
				</div>
			</div>

			<!-- Second carrousel Begin -->

			<div id='prodInfoCarouselContainer2' class='col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6' data-spy="affix" data-offset-top="480">
				<div class="container col-xs-12">
	                <div id="myCarousel2" class="carousel slide both" data-interval="false">
		                <div class="carousel-inner" role="listbox">
			                <div class="item active">
			                	<div class='row'>
									<a class='prodInfoIconHeadOrder col-xs-offset-4 col-xs-4' href="#">
										<div class='col-xs-12'>
											<center><p class='price'>$ {{ presentation.getPrice() }}</p></center>
										</div>
									</a>
								</div>
								<div class='stickyRow row'>
									<div class='ratingCont col-xs-4'>
										<div class="rating">
											{% set rank= 0 %}
											{% for inx in 1..product.getRank() %}
											 	{% set rank = rank+1 %}
											 	<span>&#x2605;</span>
											{% endfor %}
											{% if rank < 5 %}
												{% for inx2 in rank..4 %}
													{% set rank = rank+1 %}
													<span>&#x2606;</span>
												{% endfor %}
											{% endif %}
										</div>
									</div>
									<a class='stickyRow col-xs-4' href="#">
										<img src="/web/public/imgs/icon5.svg">
									</a>
									<div class='reviews col-xs-4'>
										<a href="#">{{ product.getReviews() }} {{ template.getReviewsTitle() }}</a>
									</div>
								</div>
								<div class='order row'>
									<div class='col-xs-offset-4 col-xs-4'>
										<a id="product" data-product-id="{{product.getId() }}" class='orderPresentation prodInfoIconHeadOrder'>
											<h4>{{ template.getOrderTitle() }}</h4>
										</a>
									</div>
								</div>
								<div class='row'>
									<center><a class="btn btn-default btn-xs share" href="#"><span class="glyphicon glyphicon-share" aria-hidden="true"></span> Share</a></center>
								</div>
			                </div>
			                 
			                <div class="item">
			                	<div class='row'>
									<a class='prodInfoIconHeadOrder col-xs-offset-4 col-xs-4' href="#">
										<div class='col-xs-12'>
											<center><p class='price'>$19.99</p></center>
										</div>
									</a>
								</div>
								<div class='stickyRow row'>
									<div class='ratingCont col-xs-4'>
										<div class="rating">
											<span>&#x2605;</span><span>&#x2605;</span><span>&#x2605;</span><span>&#x2606;</span><span>&#x2606;</span>
										</div>
									</div>
									<a class='stickyRow col-xs-4' href="#">
										<img src="/web/public/imgs/icon5.svg">
									</a>
									<div class='reviews col-xs-4'>
										<a href="#">7 reviews</a>
									</div>
								</div>
								<div class='order row'>
									<div class='col-xs-offset-4 col-xs-4'>
										<a href="#">
											<h4>Order</h4>
										</a>
									</div>
								</div>
								<div class='row'>
									<center><a class="btn btn-default btn-xs share" href="#"><span class="glyphicon glyphicon-share" aria-hidden="true"></span> Share</a></center>
								</div>
			                </div>
			                 
			                <div class="item">
			                	<div class='row'>
									<a class='prodInfoIconHeadOrder col-xs-offset-4 col-xs-4' href="#">
										<div class='col-xs-12'>
											<center><p class='price'>$39.99</p></center>
										</div>
									</a>
								</div>
								<div class='stickyRow row'>
									<div class='ratingCont col-xs-4'>
										<div class="rating">
											<span>&#x2605;</span><span>&#x2605;</span><span>&#x2605;</span><span>&#x2606;</span><span>&#x2606;</span>
										</div>
									</div>
									<a class='stickyRow col-xs-4' href="#">
										<img src="/web/public/imgs/icon5.svg">
									</a>
									<div class='reviews col-xs-4'>
										<a href="#">16 reviews</a>
									</div>
								</div>
								<div class='order row'>
									<div class='col-xs-offset-4 col-xs-4'>
										<a href="#">
											<h4>Order</h4>
										</a>
									</div>
								</div>
								<div class='row'>
									<center><a class="btn btn-xs share" href="#"><span class="glyphicon glyphicon-share" aria-hidden="true"></span> Share</a></center>
								</div>
			                </div>
		                </div>
	                </div>
				</div>
			</div>
		</div>

			<!-- Second carrousel End -->

		</section>
		<div class='clearfix'></div>
		<section>
		<div id='prodInfoWidth'>
			<div class='prodInfoPreferences row col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6'>
				<div class='row'>
					<div class='col-xs-12 col-md-6'>
						<div id='informationSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon2.svg">
									<h4>Information</h4>
								</div>                                                                    
							</center>
							<div id='prodInfoDetails' class='col-xs-12'>
								<p>
									<span>Farm: </span><a class='btn btn-default btn-xs' href="#">Tortuga</a></br>
									<span>Species: </span>Arabica</br>
									<span>Cultivar: </span>Caturra</br>
									<span>Grade: </span>SHB</br>
									<span>Processing: </span>Washed</br>
									<span>Flavor notes: </span>Dried frutis and chocolate</br>
								</p>
							</div>
						</div>
					</div>
					<div class='col-xs-12 col-md-6'>
						<div id='roastSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon7.svg">
									<h4>Roast</h4>
								</div>
							</center>
							<div class="btn-group btn-group-justified" role="group" aria-label="...">
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default active">Light</button>
								</div>
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default">Medium</button>
								</div>
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default">Dark</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class='row'>
					<div class='col-xs-12 col-md-6'>
						<div id='presentationSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon10.svg">
									<h4>Weight</h4>
								</div>
							</center>
							<div class="btn-group btn-group-justified" role="group" aria-label="...">
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default">32 oz</button>
								</div>
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default active">12 oz</button>
								</div>
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default">32 oz</button>
								</div>
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default">12 oz</button>
								</div>

							</div>
						</div>
					</div>
					<div class='col-xs-12 col-md-6'>
						<div id='presentationSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon8.svg">
									<h4>Grind</h4>
								</div>
							</center>
							<div class="btn-group btn-group-justified" role="group" aria-label="...">
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default">Whole Bean</button>
								</div>
								<div class="btn-group" role="group">
									<button type="button" class="btn btn-default active">Ground</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class='row'>
					<div class='col-xs-12 col-md-offset-3 col-md-6'>
						<div id='cupSection'>
							<center>
								<div class='prodInfoIconHeadings col-xs-offset-3 col-xs-6'>
									<img src="/web/public/imgs/icon9.svg">
									<h4>Cup Scoring</h4>
								</div>
							</center>
							<div id='cupMap' class='col-xs-12'>
								<center><img src="/web/public/imgs/cupScoring.png"></center>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		</section>
	</main>
	

{% endblock %}
{% block javascripts %}
    {{ parent() }}
	<script src="{{ asset('/web/public/js/product_information.js')}}"></script>
{% endblock %}